<%= form_for current_user, url: update_profile_users_path(current_user.id), remote: true do |f| %>
<div class="modal-body">
    <div class="row">
      <div class="col-xs-6">
        <div class="form-group firstname">
          <label>First Name</label>
          <%= f.text_field :firstname, class: "form-control" %>
        </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group lastname">
        <label>Last Name</label>
        <%= f.text_field :lastname, class: "form-control" %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <label>How'd you hear about us?<span class="color-hexa"><p>(optional)</p></span></label>
        <p class="color-hexa">Referred by another photographer? Tell us his or her name so we can thank them!</p>
        <input type="text"class="form-control">
      </div>
    </div>
</div>
<div class="modal-footer">
  <%= f.submit "Get Started", class: "btn btn-primary" %>
</div>
<% end %>

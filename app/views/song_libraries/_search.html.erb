<div class="col-lg-3">
  <div class="filter">
    <h4>Search</h4>
    <div class="form-group">
      <%= label_tag :singer ,"Artist" %>
      <%= text_field_tag "singer",nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :title ,"Phrase in Song Title" %>
      <%= text_field_tag "title",nil, class: "form-control" %>
    </div>
    <div class="submit-btn">
      <%= submit_tag "Find Song", class: "btn btn-default" %>
    </div>
  </div>
</div>

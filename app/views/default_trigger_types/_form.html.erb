<%= form_for(@default_trigger_type) do |f| %>
  <div class="form-inputs">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-inputs">
    <%= f.label :active %>
    <%= f.text_field :active %>
  </div>
  <div class="form-inputs">
    <%= f.label :default_email_template_type %>
    <%= f.collection_select :default_email_template_type_id, DefaultEmailTemplateType.all, :id, :name %>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>

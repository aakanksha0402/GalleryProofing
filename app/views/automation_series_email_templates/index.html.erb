<h1>Listing Automation Series Email Templates</h1>

<table>
  <thead>
    <tr>
      <th>Automation series</th>
      <th>Email template</th>
      <th>Default receipient type</th>
      <th>Default trigger type</th>
      <th>Trigger days</th>
      <th>Template name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @automation_series_email_templates.each do |automation_series_email_template| %>
      <tr>
        <td><%= automation_series_email_template.automation_series %></td>
        <td><%= automation_series_email_template.email_template %></td>
        <td><%= automation_series_email_template.default_receipient_type %></td>
        <td><%= automation_series_email_template.default_trigger_type %></td>
        <td><%= automation_series_email_template.trigger_days %></td>
        <td><%= automation_series_email_template.template_name %></td>
        <td><%= link_to 'Show', automation_series_email_template %></td>
        <td><%= link_to 'Edit', edit_automation_series_email_template_path(automation_series_email_template) %></td>
        <td><%= link_to 'Destroy', automation_series_email_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


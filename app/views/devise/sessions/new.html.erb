<% content_for :head, "GalleryProofing | Login"%>
<% content_for :body_class, "login-index" %>
<script>
$('#hideNav').remove();
</script>
<div class="container-fluid">
  <div class="row">
  <div class="login-box">
      <%= link_to root_path do%>
        <div class="logo-login">
        </div>
      <% end %>
      <div class="form">

        <h3>Studio Panel Login</h3>
        <div class="login">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <span style="color:red;"><%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %></span>
          <span style="color:red;"><%= content_tag(:div, flash[:alert], :id => "flash_error") if flash[:alert] %></span>
            <div class="form-group">
              <%= f.label :email, "Username" %>
              <%= f.text_field :email, class: 'form-control', placeholder: 'example@email.com', autofocus: true %>              
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
            </div>
            <div class="help">
              <%= link_to "Forgot?", new_user_password_path(resource_name) %><br />
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="checkbox checked-box">
                <%= f.check_box :remember_me, checked: true %>
                <%= f.label :remember_me,"Keep me logged in", class: 'optional' %>
              </div>
            <% end -%>

            <div class="button-row text-center">
              <div class="form-group">
                <%= f.submit "Login", class: "btn btn-primary", name: "submit" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="legal">Â© 2009-2016 GalleryProofing</div>
  </div>
  </div>
</div>
<script type="text/javascript">
      $(document).ready(function(){
        $(".checkbox input").click(function(){
          if($( ".checkbox input" ).is(':checked')){
            $(".checkbox").addClass('checked-box');
          }
          else{
            $(".checkbox").removeClass('checked-box');
          }
        })
      });
</script>

<% content_for :body_class, "contact-index clientview-home" %>
<% content_for :info, "active" %>
  <!--nav-->

<%= render "navbar" %>

<div class="container-fluid">
  <div class="row">
    <ul class="nav nav-pills in-pills center-tabs">
      <li class="type"><%= link_to view_pricing_path do %>Pricing<%end%></li>
      <li class="active "><a>Contact</a></li>
    </ul>
  </div>
<div>

<div class="tab-pane" id="Contact">
  <div class="container-fluid">
    <div class="row client-page">
      <div class="col-lg-12 text-center">
        <div class="logo-top-title">
          <% if @color_set.gallery_logo.present?%>
            <%= image_tag @color_set.gallery_logo.url(:small) %>
          <%else%>
            <h5 class="logo-style"><%= @brand.brand_name %></h5>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-12 text-center">
       <p class="text-tab">
        <% if @home_page.show_address == true %>
          <% if @brand.address1.present? %>
            <%= @brand.address1 %>
          <% end %>
          <% if @brand.address2.present? %>
            <br><%= @brand.address2 %>
          <% end %>
          <% if @brand.city.present? %>
            <br><%= @brand.city %>
          <% end %>
          <% if @brand.brand_country.present? %>
            <%= @brand.brand_country %>
          <% end %>
          <% if @brand.pincode.present? %>
            <%= @brand.pincode %>
          <% end %>
        <% end %>
       </p>
    </div>

    <div class="links-empty">
      <% if @home_page.show_phone == true %>
        <% if @brand.phone_number.present? %>
          <div  class="link-menu">
            <%= link_to "tel:+#{@brand.phone_number}", class: "theme-color-primary" do %>
              <!-- spSvg: /content/201606011464786671/svg.svg#iconButtonPhone --><svg class="sp-svg" version="1.1" viewBox="0 0 14 14"><path d="M10,1H4C3.4,1,3,1.4,3,2v10c0,0.5,0.4,1,1,1h6c0.5,0,1-0.4,1-1V2C11,1.4,10.6,1,10,1z M7,12.5 c-0.6,0-1-0.4-1-1s0.4-1,1-1s1,0.4,1,1S7.6,12.5,7,12.5z M9.5,9c0,0.3-0.2,0.5-0.5,0.5H5C4.7,9.5,4.5,9.3,4.5,9V3 c0-0.3,0.2-0.5,0.5-0.5h4c0.3,0,0.5,0.2,0.5,0.5V9z"></path></svg>
              <label class="theme-color-primary">
                <span class="font-text ng-binding" ng-bind-html=" 'phone' | translate ">Phone</span>
              </label>
              <span class="theme-color-secondary ng-binding" ng-bind-html=" brandData.contact.phone "><%= @brand.phone_number %></span>
            <%end%>
          </div>
        <% end %>
      <% end %>

      <% if @home_page.show_email == true %>
        <% if @brand.email.present? %>
          <div  class="link-menu">
            <%= mail_to @brand.email, class: "theme-color-primary" do %>
              <!-- spSvg: /content/201606011464786671/svg.svg#iconEmail --><svg class="sp-svg" version="1.1" viewBox="0 0 25 16.2"><path d="M12.4,11.2L0.3,2.7C0.2,2.6,0,2.7,0,2.9v13.2c0,0.1,0.1,0.2,0.2,0.2h24.6c0.1,0,0.2-0.1,0.2-0.2V2.9c0-0.2-0.2-0.3-0.3-0.2l-12,8.5C12.6,11.2,12.5,11.2,12.4,11.2z"></path><path d="M12.4,8.7L0.5,0.4C0.4,0.3,0.4,0,0.6,0h23.7c0.2,0,0.3,0.2,0.1,0.4L12.6,8.7C12.6,8.8,12.5,8.8,12.4,8.7z"></path></svg>
              <label class="theme-color-primary">
                <span class="font-text ng-binding" ng-bind-html=" 'email' | translate ">Email</span>
              </label>
              <span class="theme-color-secondary ng-binding"><%= @brand.email %></span>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <% if @home_page.show_website_link == true %>
       <% if @brand.website_url.present? %>
          <div class="link-menu">
            <%= link_to "http://#{@brand.website_url}", class: "theme-color-primary" do%>
              <!-- spSvg: /content/201606011464786671/svg.svg#iconWebsite --><svg class="sp-svg" version="1.1" viewBox="0 0 16 14"><path d="M15.5,0h-15C0.224,0,0,0.224,0,0.5v10C0,10.776,0.224,11,0.5,11h5.7l-0.926,2.314C5.143,13.643,5.385,14,5.739,14h4.52c0.354,0,0.596-0.359,0.464-0.687L9.788,11H15.5c0.276,0,0.5-0.224,0.5-0.5v-10C16,0.224,15.776,0,15.5,0z M14,9.035H8.979H7H2v-7h12V9.035z"></path></svg>
              <label class="theme-color-primary">
                  <span class="font-text ng-binding" ng-bind-html=" 'website' | translate ">Website</span>
              </label>
              <span class="theme-color-secondary ng-binding"><%= @brand.website_url%></span>
            <% end %>
          </div>
        <% else %>
          <div class="link-menu">
            <%= link_to "http://#{@brand.website_url}", class: "theme-color-primary" do%>
              <!-- spSvg: /content/201606011464786671/svg.svg#iconWebsite --><svg class="sp-svg" version="1.1" viewBox="0 0 16 14"><path d="M15.5,0h-15C0.224,0,0,0.224,0,0.5v10C0,10.776,0.224,11,0.5,11h5.7l-0.926,2.314C5.143,13.643,5.385,14,5.739,14h4.52c0.354,0,0.596-0.359,0.464-0.687L9.788,11H15.5c0.276,0,0.5-0.224,0.5-0.5v-10C16,0.224,15.776,0,15.5,0z M14,9.035H8.979H7H2v-7h12V9.035z"></path></svg>
              <label class="theme-color-primary">
                  <span class="font-text ng-binding" ng-bind-html=" 'website' | translate ">Website</span>
              </label>
              <span class="theme-color-secondary ng-binding"><%= %></span>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <% if @home_page.fb_url.present? %>
        <div class="link-menu">
          <%= link_to "https://facebook.com/#{@home_page.fb_url}", class: "theme-color-primary" do %>
            <!-- spSvg: /content/201606011464786671/svg.svg#iconFacebook --><svg class="sp-svg" version="1.1" viewBox="0 0 7.27 14"><path d="M2.149,14V7.614H0V5.125h2.149V3.29C2.149,1.16,3.45,0,5.35,0c0.91,0,1.692,0.068,1.92,0.098v2.226L5.953,2.325c-1.033,0-1.233,0.491-1.233,1.212v1.589h2.464L6.863,7.614H4.719V14H2.149z"></path></svg>
            <label class="theme-color-primary">
                <span class="font-text ng-binding">Facebook</span>
            </label>
            <span class="theme-color-secondary ng-binding"><%= @home_page.fb_url %></span>
          <% end %>
        </div>
      <% end %>

      <% if @home_page.twitter_username.present? %>
        <div class="link-menu">
          <%= link_to "https://www.twitter.com/#{@home_page.twitter_username}" , class: "theme-color-primary" do %>

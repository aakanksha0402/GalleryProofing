            <label class="theme-color-primary">
                <span class="font-text ng-binding">Twitter</span>
            </label>
            <span class="theme-color-secondary ng-binding"><%= @home_page.twitter_username %></span>
          <% end %>
        </div>
      <% end %>

      <% if @home_page.intagram_username.present? %>
        <div class="link-menu">
          <%= link_to "https://www.instagram.com/#{@home_page.intagram_username}", class: "theme-color-primary"  do %>
          <!-- spSvg: /content/201606011464786671/svg.svg#iconInstagram --><svg class="sp-svg" version="1.1" viewBox="0 0 14 14"><path d="M11.199,0H2.8C1.253,0,0,1.253,0,2.8v8.4C0,12.746,1.253,14,2.8,14h8.399C12.746,14,14,12.746,14,11.2V2.8 C14,1.253,12.746,0,11.199,0z M6.979,4.3c1.491,0,2.7,1.209,2.7,2.7s-1.209,2.7-2.7,2.7s-2.7-1.209-2.7-2.7S5.488,4.3,6.979,4.3z M12.359,7.265v4.24c0,0.483-0.392,0.875-0.875,0.875h-9.01c-0.483,0-0.875-0.392-0.875-0.875v-4.24V5.94h1.212 C2.726,6.279,2.68,6.634,2.68,7c0,2.375,1.925,4.3,4.3,4.3s4.3-1.925,4.3-4.3c0-0.366-0.046-0.721-0.132-1.06h1.212V7.265 L12.359,7.265z M12.359,3.465c0,0.483-0.392,0.875-0.875,0.875h-0.95c-0.482,0-0.875-0.392-0.875-0.875V2.515 c0-0.483,0.392-0.875,0.875-0.875h0.95c0.483,0,0.875,0.392,0.875,0.875V3.465L12.359,3.465z"></path></svg>
            <label class="theme-color-primary">
                <span class="font-text ng-binding" >Instagram</span>
            </label>
            <span class="theme-color-secondary ng-binding"><%= @home_page.intagram_username %></span>
          <% end %>
        </div>
      <% end %>

      <% if @home_page.pinterest_username.present? %>
        <div class="link-menu">
          <%= link_to "https://www.pinterest.com/#{@home_page.pinterest_username}", class: "theme-color-primary" do%>
            <!-- spSvg: /content/201606011464786671/svg.svg#iconPinterest --><svg class="sp-svg" version="1.1" viewBox="0 0 14 14"><path d="M7,0C3.134,0,0,3.134,0,7c0,2.965,1.845,5.498,4.449,6.518c-0.061-0.554-0.116-1.403,0.024-2.008C4.6,10.964,5.294,8.031,5.294,8.031S5.085,7.612,5.085,6.992c0-0.973,0.564-1.7,1.267-1.7c0.597,0,0.886,0.448,0.886,0.986c0,0.601-0.382,1.499-0.58,2.331C6.492,9.305,7.007,9.873,7.694,9.873c1.244,0,2.201-1.312,2.201-3.206c0-1.676-1.204-2.848-2.924-2.848c-1.992,0-3.161,1.494-3.161,3.038c0,0.602,0.232,1.247,0.521,1.597c0.057,0.069,0.066,0.13,0.049,0.201C4.326,8.877,4.208,9.353,4.185,9.45C4.154,9.578,4.083,9.605,3.951,9.543C3.076,9.136,2.53,7.858,2.53,6.832c0-2.208,1.604-4.236,4.625-4.236c2.428,0,4.315,1.73,4.315,4.043c0,2.413-1.521,4.354-3.632,4.354c-0.709,0-1.376-0.369-1.604-0.804c0,0-0.351,1.337-0.436,1.664c-0.158,0.608-0.585,1.37-0.87,1.835C5.582,13.89,6.278,14,7,14c3.866,0,7-3.134,7-7C14,3.134,10.866,0,7,0z"></path></svg>
            <label class="theme-color-primary">
                <span class="font-text ng-binding">Pinterest</span>
            </label>
            <span class="theme-color-secondary ng-binding"><%= @home_page.pinterest_username %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
$('input[name="rdinterested"]').click(function(){
  if($(this).attr('id')=='gallery_layout_introduction_page_layout_limelight'){
    $('.gallery-settings div#TypeDemo').removeClass();
    $('.gallery-settings div#TypeDemo').addClass('full-bottom');
  }
  else if($(this).attr('id')=='gallery_layout_introduction_page_layout_marquee'){
    $('.gallery-settings div#TypeDemo').removeClass();
    $('.gallery-settings div#TypeDemo').addClass('full-center');
  }
  else if($(this).attr('id')=='gallery_layout_introduction_page_layout_detail'){
    $('.gallery-settings div#TypeDemo').removeClass();
    $('.gallery-settings div#TypeDemo').addClass('split');
  }
});
</script>
<script>

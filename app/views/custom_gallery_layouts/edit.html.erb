  var val = document.getElementById('Archive').value;
  if (val == 'Do Not Archive'){
    $("#custom_gallery_layout_archiving").val("");
  }else{
    $("#custom_gallery_layout_archiving").val($("#Archive").val());
  }

  <%if @custom_gallery_layout.email_require == true%>
    $("#email_require").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.preregistration == true%>
    $("#preregistration").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.cropping == true%>
    $("#cropping").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.black_and_white_filtering == true%>
    $("#black_and_white_filtering").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.social_sharing_link == true%>
    $("#social_sharing_link").addClass('checked-box');
    $("#social").attr("disabled",false);
  <% end %>
  <%if @custom_gallery_layout.add_photo_to_cart == true%>
    $("#add_photo_to_cart").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.pay_later == true%>
    $("#pay_later").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.digital_download == true%>

  <%if @custom_gallery_layout.entire_gallery_download == true %>

  $('#entire_gallery_download_check_box').parent().addClass('checked-box');
    // $("#entire_gallery_download").addClass('checked-box');
  <% end %>
  <% if @custom_gallery_layout.entire_gallery_download == false %>
    $('#entire_gallery_download_check_box').parent().removeClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.hide_photos == true%>
    $("#hide_photos").addClass('checked-box');
  <% end %>
  <%if @custom_gallery_layout.require_PIN == true%>
    $('#require_PIN_check_box').parent().addClass('checked-box');
    $("#require_PIN_text").attr("disabled",false);

    $("#Marquee").addClass('selected');
  <%elsif @custom_gallery_layout.introduction_page_layout == "Detail"%>
    $("#Detail").addClass('selected');
  <%elsif @custom_gallery_layout.introduction_page_layout == "Accent"%>
    $("#Accent").addClass('selected');
  <%else%>
    $("#HeadLine").addClass('selected');
  <%end%>

  <% if @custom_gallery_layout.photo_page_layout == "Cascade"%>
    $("#Cascade").addClass('selected');
  <%else%>
    $("#Subway").addClass('selected');
  <%end%>


});
</script>

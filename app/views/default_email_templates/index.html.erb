<p id="notice"><%= notice %></p>

<h1>Listing Default Email Templates</h1>

<table border="1px">
  <thead>
    <tr>
      <th>Email type</th>
      <th>Email subject</th>
      <th>Headline</th>
      <th>Button text</th>
      <th>Email body</th>
      <th>After Select</th>
      <th>For Button</th>
      <th>Template Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @default_email_templates.each do |default_email_template| %>
      <tr>
        <td><%= default_email_template.email_type %></td>
        <td><%= default_email_template.email_subject %></td>
        <td><%= default_email_template.headline %></td>
        <td><%= default_email_template.button_text %></td>
        <td><%= truncate default_email_template.email_body %></td>
        <td><%= truncate default_email_template.text_after_select %></td>
        <td><%= default_email_template.text_for_button %></td>
        <td><%= default_email_template.default_email_template_type.name %></td>

        <td><%= link_to 'Show', default_email_template %></td>
        <td><%= link_to 'Edit', edit_default_email_template_path(default_email_template) %></td>
        <td><%= link_to 'Destroy', default_email_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="form-group">
<%= label_tag :search ,"Contact Name or Email" %>
<%= text_field_tag :search, params[:search], class: "form-control" %>
</div>
<div class="form-group">
  <%= label_tag :gallery_id ,"Gallery" %>
  <%= collection_select(:id, :gallery_id, current_user.galleries.all, :id, :name, {prompt: "Please select"}, {class: "form-control input-lg selectpicker", name: "gallery"}) %>
</div>
<% if current_user.brands.count > 1 %>
<div class="form-group">
  <%= label_tag :brand_id ,"Brand" %>
  <%= collection_select(:id, :brand_id, current_user.brands.all, :id, :brand_name, {prompt: "Please select"}, {class: "form-control input-lg selectpicker", name: "brand"} ) %>
</div>
<% end %>
<div class="form-group">
  <%= label_tag :tag ,"Tag" %>
  <%= collection_select(:id, :q, ActsAsTaggableOn::Tag.all, :name, :name, {prompt: "Please select"}, {class: "form-control input-lg selectpicker", name: "tags"} ) %>
</div>

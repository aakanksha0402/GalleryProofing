<% content_for :head, "Accept Credit Cards | Accounts"%>
<% content_for :body_class, "account-acceptpayments" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <!-- title -->
      <div class="page-title">
        <div class="row">
          <div class="col-md-6 col-sm-5 col-xs-5">
            <h2>
              <div id="pageTitleHeaderText">Accept Credit Cards</div>
            </h2>
          </div>
          <div class="col-md-6 col-sm-7 col-xs-7">
            <div class="btn-group on-page-help-container"> <a href="#" class="on-page-help dropdown-toggle" data-toggle="dropdown"> <span class="fa fa-question"></span> </a>
              <ul id="onPageHelp" class="dropdown-menu dropdown-menu-right arrow-upper-right" role="menu">
                <li><a href="#" target="_blank">Can I download all of my contacts' information?</a></li>
                <li><a href="#" target="_blank">How do I add and edit contacts?</a></li>
                <li><a href="#" target="_blank">How do I view a contact's activity?</a></li>
                <li><a href="#" class="bold" target="_blank">Browse Full Knowledge Base</a></li>
                <li><a href="#">Email Us</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- /title -->
    </div>
  </div>
</div>
<div class="payment_gateaway">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-11">
        <div class="gateaway">
        <p id="notice"><%= notice %></p>
          <h1>Payment Gateway</h1>
        </div>
        <div class="row">
          <% if @gateway_setup.name == "Pro" %>
          	<div class="col-sm-9 col-sm-offset-2"> <img src="../assets/pp_pro.svg" class="icon_gateaway">
          <% elsif @gateway_setup.name == "Braintree" %>
          	<div class="col-sm-9 col-sm-offset-2"> <img src="../assets/paypal.svg" class="icon_gateaway">
          <% else %>
          	<div class="col-sm-9 col-sm-offset-2"> <img src="../assets/pp_standard.svg" class="icon_gateaway">
          <% end %>
          	<% if @gateway_setup.name == "standard" %>
          		 <div class="btn_row"> <%= link_to 'Edit', edit_gateway_setup_path(@gateway_setup),class: "btn btn-default btn-sm setup-braintree",:remote => true %><a data-target="#payment_remove" data-toggle="modal" href="#" class="btn btn-default btn-sm remove-gateway" >Remove Gateway</a> </div>
          	<% else %>
            	<div class="btn_row"> <%= link_to 'Edit', edit_gateway_setup_path(@gateway_setup),class: "btn btn-default btn-sm setup-braintree",:remote => true %><%= link_to 'Test Payment Gateway Credentials', test_setup_gateway_setups_path, class: "btn btn-default btn-sm" %><a data-target="#payment_remove" data-toggle="modal" href="#" class="btn btn-default btn-sm remove-gateway" >Remove Gateway</a> </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- modal -->  
<div class="modal" id="payment_edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"  data-backdrop="static" data-keyboard="false">

  </div>
</div>
<div class="modal" id="payment_remove" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"  data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal_">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Remove Gateway</h4>
      </div>
      <div class="modal-body">
        <p>Warning, if removed, you will not be able to receive payments from your customers.</p>
      </div>
      <div class="modal-footer text-right">
        <button data-dismiss="modal" class="btn btn-sm btn-link" id="modal1465299013575-0" type="button">Cancel</button>
        <%= link_to 'Remove Gateway', @gateway_setup, method: :delete, class: "btn btn-sm btn-danger",id: "modal1465299013575-1", "data-disable-with": "Loading..." %>
      </div>
    </div>
  </div>
</div>

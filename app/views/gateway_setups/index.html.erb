<p id="notice"><%= notice %></p>

<h1>Listing Gateway Setups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Public key</th>
      <th>Private key</th>
      <th>Environment</th>
      <th>Merchant</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gateway_setups.each do |gateway_setup| %>
      <tr>
        <td><%= gateway_setup.name %></td>
        <td><%= gateway_setup.public_key %></td>
        <td><%= gateway_setup.private_key %></td>
        <td><%= gateway_setup.environment %></td>
        <td><%= gateway_setup.merchant_id %></td>
        <td><%= gateway_setup.user %></td>
        <td><%= link_to 'Show', gateway_setup %></td>
        <td><%= link_to 'Edit', edit_gateway_setup_path(gateway_setup) %></td>
        <td><%= link_to 'Destroy', gateway_setup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


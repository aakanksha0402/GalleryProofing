<%= form_tag mail_sent_orders_path, method: :get do %>
	<p><%=label_tag 'Email'%></p>
	<%= text_field_tag 'email', (params[:email]),:required => true %>
	<p><%=label_tag 'Message'%></p>
	<%= text_area_tag 'message', (params[:message]),:required => true %>
	<%= hidden_field_tag "order", @order.id %>
	<div class="modal-footer">
	    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
	    <%= submit_tag "Send Email", :name => nil %>
	</div>
<% end %>


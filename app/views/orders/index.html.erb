                <form >

                  <div class="form-group">
                    <label>Gallary Name</label>
                    <input type="text" class="form-control"></input>
                  </div>
                  <div class="form-group">
                    <label>Shoot Date</label>
                    <input type="text" class="form-control"></input>
                  </div>
                  <div class="form-group">
                    <label>Gallery Default Settings</label>

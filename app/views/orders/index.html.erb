          <div class="row">
            <div class="col-lg-12">
              <!-- title -->
              <div class="page-title">
                <div class="row">
                  <div class="col-md-6 col-sm-5 col-xs-5">
                    <h2>
                    <div id="pageTitleHeaderText">Order</div>
                    </h2>
                  </div>
                  <div class="col-md-6 col-sm-7 col-xs-7">

<% content_for :body_class, "music-index" %>
<% content_for :head, "Songs | GalleryProofing" %>
<h1>Listing Musics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Theme</th>
      <th>Style</th>
      <th>Mood</th>
      <th>Song Type</th>
      <th>Tempo</th>
      <th>Instrument</th>
      <th>Artist</th>
      <th>Category</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td>  <%= music.title %></td>
        <td>  <%= music.theme %></td>
        <td>  <%= music.style %></td>
        <td>  <%= music.mood %></td>
        <td>  <%= music.song_type %></td>
        <td>  <%= music.tempo %></td>
        <td>  <%= music.instrument %></td>
        <td>  <%= music.artist %></td>
        <td>  <%= music.music_category_id %></td>


        <td><%= link_to 'Show', music %></td>
        <td><%= link_to 'Edit', edit_music_path(music) %></td>
        <td><%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Music', new_music_path %>
